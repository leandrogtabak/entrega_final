<!DOCTYPE html>
<html lang="en">

<head>
    <%- include(`./partials/head`) %>
</head>

<body>
    <header>
        <%- include('./partials/headerLog', {current: `formProductos`}) %>
    </header>
    <div class="jumbotron">
        <div class="container">
            <% if (allProducts.length <=0) { %>
                <p>No se encontraron datos.</p>
                <% } else { %>

                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        <% allProducts.forEach(product=>{ %>
                            <div class="col">
                                <div class="card">
                                    <img src="<%= product.thumbnail %>" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">ID: <%= product.id %>
                                        </h5>
                                        <h5 class="card-title">
                                            <%= product.title %>
                                        </h5>
                                        <p class="card-text">
                                            <%= product.detail %>
                                        </p>
                                        <p class="card-text"><span class="font-weight-bold">Precio:</span> $<%=
                                                product.price %>
                                        </p>
                                        <p class="card-text"><span class="font-weight-bold">Stock: </span>
                                            <%= product.stock %>
                                        </p>
                                        <form action="/api/carrito/addProduct" method="POST">
                                            <input type="hidden" name="idUser" value=<%=userLog._id %> />
                                            <input type="hidden" name="idProduct" value=<%=product.id %> />
                                            <button class="btn btn-dark" type="submit">ü§çAgregar al carrito</button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <% }) %>

                    </div>

                    <% } %>
        </div>
    </div>


    <footer>
        <%- include('./partials/footer') %>
    </footer>

</body>

</html>